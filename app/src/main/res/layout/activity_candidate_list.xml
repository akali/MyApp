<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CandidateListActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/for_candidates_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/result_score_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/for_candidates_recycler"
        android:layout_centerHorizontal="true"
        android:text="Score"
        android:textAllCaps="false"
        android:padding="8dp"
        android:layout_margin="20dp"
        android:textColor="#00D053"
        android:background="@drawable/button_green_rounded"/>

</RelativeLayout>