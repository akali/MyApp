<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCandidateActivity"
    android:orientation="vertical"
    android:padding="8dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="?android:listSeparatorTextViewStyle"
        android:text="Name and Surname" />

    <EditText
        android:id="@+id/display_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="?android:listSeparatorTextViewStyle"
        android:text="Bio" />

    <EditText
        android:id="@+id/bio_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:listSeparatorTextViewStyle"
        android:text="Position"/>

    <Spinner
        android:id="@+id/position_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="?android:listSeparatorTextViewStyle"
        android:text="Level"/>

    <Spinner
        android:id="@+id/level_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="?android:listSeparatorTextViewStyle"
        android:text="Languages:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/check_javascript"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Javascript"/>

        <CheckBox
            android:id="@+id/check_csharp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C#"/>

        <CheckBox
            android:id="@+id/check_java"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java"/>

        <CheckBox
            android:id="@+id/check_sql"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SQL"/>

        <CheckBox
            android:id="@+id/check_python"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Python"/>

    </LinearLayout>

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Save"/>


</LinearLayout>
